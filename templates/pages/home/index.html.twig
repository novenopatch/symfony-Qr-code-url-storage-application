{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
{% set imgSrc = asset('images/frame.png') %}
{% if l_qrcode is not null %}
    {% set imgSrc = l_qrcodeSvg %}
{% endif %}
{% block body %}
    <div class="flex flex-col md:flex-row mt-5 space-y-5 md:space-y-0 md:space-x-5">
        <div class="md:w-3/4">
            <div class="bg-white shadow-md ">
                <div class="p-6">
                    {{ include('pages/qrcode/_form.html.twig') }}
                </div>
            </div>
        </div>

        <div class="md:w-1/4">
            <div class="bg-white shadow-md rounded-lg">
                <div class="p-6">
                    <img src="{{ imgSrc }}" alt="qrcode" height="272" width="272"
                         class="w-full h-auto {% if l_qrcode is null %} opacity-25 {% endif %}">
                </div>
            </div>
        </div>
    </div>



{% endblock %}
