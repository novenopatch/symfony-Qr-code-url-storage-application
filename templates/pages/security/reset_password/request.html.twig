{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen ">
    <div class="max-w-md w-full p-6 bg-white shadow-md rounded-lg">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-semibold mb-6">Réinitialisez votre mot de passe</h1>

        {{ form_start(requestForm) }}
        <div class="mb-4">
            {{ form_row(requestForm.email, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded-md'}}) }}
        </div>

        <div class="text-sm text-gray-600 mb-6">
            Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </div>

        <button class="w-full px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition duration-200">
            Envoyer l'email de réinitialisation
        </button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}
