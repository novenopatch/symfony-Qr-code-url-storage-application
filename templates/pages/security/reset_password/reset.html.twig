{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen ">
        <div class="max-w-md w-full p-6 bg-white shadow-md rounded-lg">
            <h1 class="text-2xl font-semibold mb-6 text-gray-800">Réinitialisez votre mot de passe</h1>

            {{ form_start(resetForm) }}
            <div class="mb-4">
                {{ form_row(resetForm.plainPassword, {
                    'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-500'}
                }) }}
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700">
                Réinitialiser le mot de passe
            </button>
            {{ form_end(resetForm) }}
        </div>
    </div>


{% endblock %}
